extends ../layouts/main.pug

block content

    div(class="page-content")
        div(class="centered-column")
            div(class="auth-container login-container")
                div(class="auth-header")
                    p(class="auth-header-label") Login
                    p(class="auth-header-nav" hx-get="/auth/register" hx-target=".page") Sign Up Instead
                form(class="auth-form" hx-post="/auth/login" hx-target=".page")
                    div(class="input-container")
                        p(class="auth-form-label") Email
                        input.edit(class="secondary-shadow" type="text" name="email" placeholder="Email")
                    div(class="input-container")
                        p(class="auth-form-label") Password
                        input.edit(class="secondary-shadow" type="password" name="passwordInput" placeholder="Password")
                    button(class="secondary-color secondary-shadow")
                        p Submit
                    p(class="auth-form-error-message") #{errMessage}


